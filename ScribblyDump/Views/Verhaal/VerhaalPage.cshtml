@model List<ScribblyDump.ViewModel.VerhaalViewModel>
@{
    ViewBag.Title = "VerhaalPage";
}

<head>
    <!-- een boven, een boven, Content, Scribble.css-->
    @*<link rel="stylesheet" type="text/css" href="../../Content/Scribble.css">*@
</head>


<h2>VerhaalPage</h2>

@if (Model != null)
{
    int i = 0;

    <table id="myTable" style="width: 100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titel</th>
                <th>Beschrijving</th>
                <th>Genre</th>
                <th>Create New Chapter</th>
            </tr>

        </thead>

      
         
          @foreach (var item in Model)
          {
              i += 1;

                <tbody>
                    <tr>

                        <td>
                            @i
                        </td>
                        <td>
                          
                            @Html.ActionLink($"{item.Titel}", "FirstChapter", new { ID = item.ID }, null)
                           </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Beschrijving)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Genre)
                        </td>
                        <td>
                          @Html.ActionLink("CreateChapter", "CreateNewChapter", new { ID = item.ID }, null)
                        </td>

                        <td>

                            @Html.ActionLink("Delete", "Delete", new { ID = item.ID }, null)                      

                        </td>

                    </tr>

                </tbody>
           }




    </table>
}


else
{
    <p> You dont seem to have any stories yet!</p>
}

            @using(Html.BeginForm("GoToAddVerhaal", "Verhaal"))
            {
                <input type="submit" value="Create Story" id="go" />
            }
